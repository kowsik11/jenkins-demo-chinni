pipeline {
    agent any

    stages {
        stage('Start') {
            steps {
                echo 'Pipeline started from Jenkinsfile inside GitHub'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
    }
}
